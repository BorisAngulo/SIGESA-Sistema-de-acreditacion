# Variables de entorno para Docker - SIGESA
# Copia este archivo como .env en la raíz del proyecto

# === CONFIGURACIÓN DE LA APLICACIÓN ===
APP_NAME="SIGESA"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# === CONFIGURACIÓN DE BASE DE DATOS POSTGRESQL ===
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=sigesa_dev
DB_USERNAME=sigesa_dev
DB_PASSWORD=password123

# === CONFIGURACIÓN DE REDIS ===
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_PORT=6379

# === CONFIGURACIÓN DE CACHÉ ===
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# === CONFIGURACIÓN DE CORREO (OPCIONAL) ===
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@umss.edu.bo"
MAIL_FROM_NAME="SIGESA"

# === PUERTOS DE SERVICIOS (PERSONALIZABLES) ===
FRONTEND_PORT=3000
BACKEND_PORT=8000
POSTGRES_PORT=5433
REDIS_PORT=6379

# === CONFIGURACIÓN DE DESARROLLO ===
# Ejecutar migraciones automáticamente
RUN_MIGRATIONS=true
# Ejecutar seeders automáticamente (solo en desarrollo)
RUN_SEEDERS=true

# === CONFIGURACIÓN DE PRODUCCIÓN ===
# Cambiar a 'production' para entorno de producción
APP_ENV=local
LOG_LEVEL=debug

# === GOOGLE DRIVE (OPCIONAL) ===
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
GOOGLE_DRIVE_REFRESH_TOKEN=
GOOGLE_DRIVE_FOLDER_ID=

# === CONFIGURACIÓN DE BACKUP ===
BACKUP_DISK=local